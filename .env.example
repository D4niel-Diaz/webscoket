# WebSocket Server Configuration
PORT=3001
NODE_ENV=production

# Laravel Backend API
LARAVEL_API_URL=http://localhost:8000/api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
MAX_CONNECTIONS_PER_IP=5
MESSAGE_RATE_LIMIT=10
MESSAGE_RATE_WINDOW=60000

# Connection Settings
PING_TIMEOUT=60000
PING_INTERVAL=25000
MAX_HTTP_BUFFER_SIZE=1e6

# Presence Settings
PRESENCE_TIMEOUT=90000
HEARTBEAT_INTERVAL=30000
